<?xml version="1.0" encoding="utf-8"?>


<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="4"

    android:gravity="center">

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Статус игры"
        android:textSize="24sp" />

    <Button android:id="@+id/button00" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="3dp"
        android:layout_row="1"
        android:layout_column="0"
        android:padding="20dp"
        android:layout_marginLeft="20dp"/>
    <Button android:id="@+id/button01" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="3dp"
        android:layout_row="1"
        android:layout_column="1"
        android:padding="20dp"
        android:layout_marginLeft="20dp"/>
    <Button android:id="@+id/button02" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="3dp"
        android:layout_row="1"
        android:layout_column="2"
        android:padding="20dp"
        android:layout_marginLeft="20dp"/>
    <Button android:id="@+id/button03" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="3dp"
        android:layout_row="2"
        android:layout_column="0"
        android:padding="20dp"
        android:layout_marginLeft="20dp"/>
    <Button android:id="@+id/button04" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="3dp"
        android:layout_row="2"
        android:layout_column="1"
        android:padding="20dp"
        android:layout_marginLeft="20dp"/>
    <Button android:id="@+id/button05" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="3dp"
        android:layout_row="2"
        android:layout_column="2"
        android:padding="20dp"
        android:layout_marginLeft="20dp"/>
    <Button android:id="@+id/button06" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="3dp"
        android:layout_row="3"
        android:layout_column="0"
        android:padding="20dp"
        android:layout_marginLeft="20dp"/>
    <Button android:id="@+id/button07" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="3dp"
        android:layout_row="3"
        android:layout_column="1"
        android:padding="20dp"
        android:layout_marginLeft="20dp"/>
    <Button android:id="@+id/button08" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="3dp"
        android:layout_row="3"
        android:layout_column="2"
        android:padding="20dp"
        android:layout_marginLeft="20dp"/>
</GridLayout>
